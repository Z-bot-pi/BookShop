{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Frontend",
            "program": "${workspaceFolder}/frontend/${input:entryFile}",
            "args": [
                "--serve"
            ]
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "entryFile",
            "description": "Path to your entry file (e.g., src/main.jsx)"
        }
    ]
}